{% extends '@LucieDesaint/admin/index.html.twig' %}

{% block body %}
    <h1 style="color: #33b5e5; font-weight: bolder;padding-bottom: 45px;">Actualite edit</h1>

<div class="container">
    <div class="globale-textarea">
        {{ form_start(edit_form) }}

        <div class="row">
            <div class="col-md-6 col-xs-12">
                <div class="row">
                    {{ form_label(edit_form.textFr) }}
                </div>
                {{ form_widget(edit_form.textFr) }}
                {{ form_errors(edit_form.textFr) }}
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="row">
                    {{ form_label(edit_form.textEn) }}
                </div>
                {{ form_widget(edit_form.textEn) }}
                {{ form_errors(edit_form.textEn) }}
            </div>
        </div>

        {{ form_widget(edit_form) }}
        <input type="submit" value="Valider" class="btn btn-primary btn-info"/>
        {{ form_end(edit_form) }}
    </div>

    <ul style="background-color: rgba(113, 102, 102, 0);">
        <li>
            <a href="{{ path('actualites_index') }}" class="btn btn-primary btn-info">Annuler</a>
        </li>
    </ul>
</div>

{% endblock %}
