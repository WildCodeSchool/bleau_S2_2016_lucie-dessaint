{% extends 'base.html.twig' %}

{% block body %}
    <h1>Actualite edit</h1>
<div class="container">
    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" class="btn btn-primary btn-info"/>
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('actualites_index') }}" class="btn btn-primary btn-info">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-primary btn-info">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>

    <div class="container">
        <h1>Actualite creation</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create" class="btn btn-primary btn-info" />
        {{ form_end(form) }}

        <ul style="background-color: rgba(113, 102, 102, 0.04);">
            <li>
                <a href="{{ path('actualites_index') }}" class="btn btn-primary btn-info" >Back to the list</a>
            </li>
        </ul>
    </div>
{% endblock %}
