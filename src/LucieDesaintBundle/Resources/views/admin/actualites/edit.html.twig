{% extends '@LucieDesaint/admin/index.html.twig' %}

{% block body %}
    <h1>Actualite edit</h1>

<div class="container">
    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Valider" class="btn btn-primary btn-info"/>
    {{ form_end(edit_form) }}

    <ul style="background-color: rgba(113, 102, 102, 0);">
        <li>
            <a href="{{ path('actualites_index') }}" class="btn btn-primary btn-info">Back to the list </a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-primary btn-info">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>

    <style>
        @media screen and (max-width: 790px) {

            textarea {
                height: 245px;
            }

            .globale-textarea{

                text-align: center;
            }
        }
        }
    </style>

    <style>

        @media screen and (max-width: 767px) {

            textarea {

                height: 245px;
                width: 400px;
            }

            .globale-textarea{

                text-align: center;

            }

    </style>

{% endblock %}
