{% extends '@LucieDesaint/admin/index.html.twig' %}

{% block body %}

    <h1 style="color: #33b5e5; font-weight:bolder ">Categories list</h1>

    <table class="table table-striped table-bordered ">
        {#------------------------------------- champs 2 -------------------------------------#}
        <thead>
        <tr>
            <th style=" text-align: center">ID</th>
            <th style="text-align: center">Src</th>
            <th style="text-align: center">Alt</th>
            <th style="text-align: center" class="th-action">Action</th>
        </tr>
        </thead>
        {#------------------------------------- champs 2 -------------------------------------#}
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('categories_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td></td>
                <td></td>
                <td>
                    <ul style="background-color: rgba(113, 102, 102, 0); border: 2px solid rgba(255, 255, 255, 0.04);">
                        <li>
                            <a href="{{ path('categories_show', { 'id': category.id }) }}"  class="btn btn-primary btn-info" style="
                                       border-radius: 45px;">show</a>
                        </li>
                        <li>
                            <a href="{{ path('categories_edit', { 'id': category.id }) }}"  class="btn btn-primary btn-info" style="
                                       border-radius: 45px;">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div style="width: 200px; border-radius: 45px;">
        <a href="{{ path('categories_new') }}" class="btn btn-primary btn-info" style="
                                       border-radius: 45px;">Nouveau produit
        </a>
    </div>
{% endblock %}
