{% extends '@LucieDesaint/admin/index.html.twig' %}

{% block body %}
    <h1>Category</h1>

    <table class="table table-striped table-bordered ">
        {#------------------------------------- champs 2 -------------------------------------#}
        <thead>
        <tr>
            <th style=" text-align: center">ID</th>
            <th style="text-align: center">Label</th>
        </tr>
        </thead>
        {#------------------------------------- champs 2 -------------------------------------#}
        <tbody>
            <td style="text-align:center">{{ category.id }}</td>
            <td style="text-align:center">{{ category.label }}</td>
        <div class="button" style="position: relative; top: 275px;">
            <ul style="background-color: rgba(113, 102, 102, 0); border: 2px solid rgba(255, 255, 255, 0.08);">
                <li>
                    <a href="{{ path('categories_index') }}" class="btn btn-primary btn-info" >Back to the list</a>
                </li>
                <li>
                    <a href="{{ path('categories_edit', { 'id': category.id }) }}" class="btn btn-primary btn-info">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="btn btn-primary btn-info">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
        </tbody>
    </table>

     <style>
         .button{

         }
         @media screen and (max-width: 428px) {

             .th_action{
                 width: 45%!important;
             }
         }
     </style>

{% endblock %}
