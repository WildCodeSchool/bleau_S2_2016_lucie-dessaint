{% extends '@LucieDesaint/admin/index.html.twig' %}

{% block body %}
    <h1 style="color: #33b5e5; font-weight: bolder;padding-bottom: 45px;">Newsletter edit</h1>
<div class="container">
    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" style="border-radius: 20px;" class="btn btn-primary btn-info"/>
    {{ form_end(edit_form) }}

    <ul style="background-color: white">
        <li>
            <a href="{{ path('newsletter_index') }}" style="border-radius: 20px;" class="btn btn-primary btn-info">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" style="border-radius: 20px;" class="btn btn-primary btn-info">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
