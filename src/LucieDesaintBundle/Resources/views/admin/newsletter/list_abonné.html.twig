{% extends '@LucieDesaint/admin/index.html.twig' %}

{% block body %}
<div class="container">
    {% for flash_message in app.session.flashBag.get('notice') %}
        <div class="row container text-center">
            <div class="flash-notice center">
                {{ flash_message }}
            </div>
        </div>
    {% endfor %}
    <table>
        <thead>
        <tr>
            <th>Adresse email</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('newsletter_delete_abonne', { 'id': user.id }) }}">Supprimer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
