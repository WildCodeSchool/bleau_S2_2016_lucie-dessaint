<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Lucie De Saint</title>
    <style>
        .logo {
            width: 30%;
            margin-left: 35%;
        }
        .container {
            margin-top: 15px;
            padding: 10px;
        }
        .center {
            text-align: center;
        }
        .message {
            text-align: justify;
            margin-top: 25px;
            font-size: 15px;
        }
    </style>
</head>


{% block body %}
    <div class="container">
        <img src="{{ cid }}" alt="logo" class="logo">
        <div class="center">
            <h1>{{ titre }}</h1>
        </div>
        <div class="message">
            {{ content | raw }}
        </div>
    </div>
{% endblock %}
</html>