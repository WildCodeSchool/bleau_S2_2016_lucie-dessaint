{% extends 'base.html.twig' %}

{% block body %}
    <h1>Artistes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Textepresentation</th>
                <th>Textback</th>
                <th>Textback2</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artiste in artistes %}
            <tr>
                <td><a href="{{ path('artiste_show', { 'id': artiste.id }) }}">{{ artiste.id }}</a></td>
                <td>{{ artiste.textepresentation }}</td>
                <td>{{ artiste.textback }}</td>
                <td>{{ artiste.textback2 }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('artiste_show', { 'id': artiste.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('artiste_edit', { 'id': artiste.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('artiste_new') }}">Create a new artiste</a>
        </li>
    </ul>
{% endblock %}
